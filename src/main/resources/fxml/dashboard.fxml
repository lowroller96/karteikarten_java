<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controller.DashboardController"
      spacing="20" alignment="CENTER" >

    <Label fx:id="usernameLabel" text="Willkommen!" style="-fx-font-size: 18px;"/>
    <Label fx:id="statusLabel" textFill="red"/>
    <Button text="Meine Karten ansehen" onAction="#onViewCards"/>
    <Button text="Abmelden" onAction="#onLogout"/>

</VBox>